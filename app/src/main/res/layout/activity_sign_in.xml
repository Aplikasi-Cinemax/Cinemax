<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/signup_logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/cinemax_logo" />

        <TextView
            android:id="@+id/user_greeting"
            android:layout_below="@+id/signup_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Welcome Back"
            android:textSize="18dp"
            android:layout_marginTop="-75dp"></TextView>

        <TextView
            android:id="@+id/get_started"
            android:layout_below="@+id/user_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Please, Log In"
            android:textSize="22dp"
            android:textStyle="bold"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/get_started"
            android:layout_marginTop="22dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/label_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/email_input"
                android:layout_below="@+id/label_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Your Email"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/button_textfield_radius"
                android:textColorHint="@color/white"
                android:textColor="@color/white"></EditText>

            <TextView
                android:id="@+id/label_password"
                android:layout_below="@+id/email_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/password_input"
                android:layout_below="@+id/label_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Your Password"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/button_textfield_radius"
                android:textColorHint="@color/white"
                android:textColor="@color/white"></EditText>

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_input"
                android:text="Continue"
                android:textAllCaps="false"
                android:backgroundTint="@color/background_primary"
                android:drawableRight="@drawable/create_acc_icon"
                android:textColor="@color/imperial_red"
                android:textStyle="bold"></Button>

            <LinearLayout
                android:id="@+id/or_divider"
                android:layout_below="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="14dp">

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/imperial_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:paddingHorizontal="10dp"></TextView>

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/imperial_red"/>
            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/or_divider"
                android:text="Create an Account"
                android:textAllCaps="false"
                android:backgroundTint="@color/imperial_red"
                android:drawableLeft="@drawable/saveadd"></Button>
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>